{
    "name": "{{ composer.vendor_name }}/{{ composer.package_name }}",
    "description": "{{ recipe_description }}",
    "keywords": ["recipe", "Drupal recipes", "drupal recipe"],
    "type": "drupal-recipe",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "{{ composer.author_name }}",
            "role": "Maintainer"
        }
    ],
    "require": {
    {% for dependency in composer.dependencies %}
        "{{ dependency.name }}": "{{ dependency.version }}"{% if not loop.last %},
      {% endif %}
    {% endfor %}

    }
}
